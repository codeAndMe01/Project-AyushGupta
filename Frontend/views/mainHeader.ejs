<div class="bg-white shadow-md sticky top-0 z-50">
    <div class="container mx-auto px-4 md:px-8">
        <div class="flex justify-between items-center py-4">
            <!-- Logo -->
            <div class="flex items-center space-x-4 h-[70px] w-[100px]">
                <a href="/" class="flex items-center">
                    <img src="../img/Pradhanlogo.png" alt="Pradhan Namkeen" class="h-full w-full" />
                </a>
            </div>

            <!-- Menu Icon for Mobile -->
            <div class="block lg:hidden">
                <button id="menu-toggle" class="text-gray-800 focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>

            <!-- Navigation Menu -->
            <nav id="nav-menu" class="hidden lg:flex space-x-6 text-gray-800 font-medium items-center">
                <a href="/" class="text-[#000000] hover:text-gray-600">Home</a>
                <a href="/about-us" class="text-[#000000] hover:text-gray-600">About Us</a>
                <div class="relative group">
                    <a href="#" class="text-[#000000] hover:text-gray-600 flex items-center">
                        Our Products
                        <svg class="ml-1 w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </a>
                    <div class="absolute left-0 mt-2 w-48 bg-white border border-gray-200 shadow-md rounded-lg opacity-0 transition-opacity duration-300 pointer-events-none group-hover:opacity-100 group-hover:pointer-events-auto">
                        <% categories.forEach(category => { %>
                            <a href="/category/<%= category.name %>" class="block px-4 py-2 text-sm hover:bg-gray-100">
                                <%= category.name %>
                            </a>
                        <% }) %>
                    </div>
                </div>
                <a href="/inquiry-form" class="text-[#000000] hover:text-gray-600">Distribution / Super stockist</a>
                <a href="/feedback-form" class="text-[#000000] hover:text-gray-600">Feedback Form</a>
                <a href="/contact-us" class="text-[#000000] hover:text-gray-600">Contact Us</a>

                <!-- Search Bar -->
                <div class="relative flex items-center space-x-2">
                    <input id="search-bar" type="text" placeholder="Search..." class="hidden lg:hidden border border-gray-300 rounded-full px-4 py-2 w-48 focus:outline-none focus:ring focus:border-blue-300" />
                    <button id="search-button" class="hidden lg:block px-4 py-2 bg-[#EC3539] text-white rounded-full hover:bg-opacity-90"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </nav>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden lg:hidden">
            <nav class="flex flex-col space-y-4 mt-4">
                <a href="#" class="text-[#000000] hover:text-gray-600">Home</a>
                <a href="/about-us" class="text-[#000000] hover:text-gray-600">About Us</a>
                <div class="relative group">
                    <a href="#" class="text-[#000000] hover:text-gray-600 flex items-center">
                        Our Products
                        <svg class="ml-1 w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </a>
                    <div class="absolute left-0 mt-2 w-48 bg-white border border-gray-200 shadow-md rounded-lg opacity-0 transition-opacity duration-300 pointer-events-none group-hover:opacity-100 group-hover:pointer-events-auto">
                         <!-- Loop through categories and show them as links -->
            <% categories.forEach(category => { %>
                <a href="/category/<%= category.name %>" class="block px-4 py-2 text-sm hover:bg-gray-100">
                    <%= category.name %>
                </a>
            <% }) %>
                    </div>
                </div>
                <a href="/inquiry-form" class="text-[#000000] hover:text-gray-600">Distribution / Super stockist</a>
                <a href="/feedback-form" class="text-[#000000] hover:text-gray-600">Feedback Form</a>
                <a href="/contact-us" class="text-[#000000] hover:text-gray-600">Contact Us</a>

                <!-- Mobile Search Input -->
                <div class="pb-4 relative flex items-center space-x-2 ">
                    <input id="mobile-search-bar" type="text" placeholder="Search..." class=" border border-gray-300 rounded-full px-4 py-2 w-full focus:outline-none focus:ring focus:border-blue-300 mt-2" />
                    <button id="mobile-search-button" class="px-4 py-2 bg-[#EC3539] text-white rounded-full hover:bg-opacity-90"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </nav>
        </div>
    </div>
</div>

<script>
    const menuToggle = document.getElementById('menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const searchBar = document.getElementById('search-bar');
    const searchButton = document.getElementById('search-button');
    const mobileSearchBar = document.getElementById('mobile-search-bar');
    const mobileSearchButton = document.getElementById('mobile-search-button');
    
    menuToggle.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });


    // Add search functionality for desktop
    searchButton.addEventListener('click', () => {
        const query = searchBar.value;
        searchBar.style.display = 'block';
        if (query) {
            window.location.href = `/search?query=${query}`;
        }
    });

    // for keyboard 
    searchBar.addEventListener('keypress', (event) => {
    if (event.key === 'Enter') { // Check if 'Enter' key is pressed
        event.preventDefault(); // Prevent the default action (optional)
        const query = searchBar.value.trim(); // Trim whitespace
        if (query) {
            window.location.href = `/search?query=${query}`;
        }
    }
});


    // Add search functionality for mobile
    mobileSearchButton.addEventListener('click', () => {
        const query = mobileSearchBar.value;
        if (query) {
            window.location.href = `/search?query=${query}`;
        }
    });
</script>
