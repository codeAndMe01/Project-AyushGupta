<%- include('../partials/header') %>

<div class="container mx-auto my-10 px-4">
  <!-- Category Title -->
  <h1 class="text-3xl font-semibold mb-4"> <%= title %></h1>

  <div class="mb-4 flex justify-between items-center ">
    <p>Showing 1–<%= products.length %> results</p>

    <div class="relative w-full md:w-1/4">
      <select class="block appearance-none w-full border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
        <option value="" selected disabled hidden>Sort by: low to high</option>
        <option value="popularity">Sort by popularity</option>
        <option value="average-rating">Sort by average rating</option>
        <option value="latest">Sort by latest</option>
        <option value="low-high">Sort by price: low to high</option>
        <option value="high-low">Sort by price: high to low</option>
      </select>
      <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
        <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Product Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% products.forEach(product => { %>
        <div class="border rounded-lg p-4 text-center hover:shadow-lg transition-shadow border-2 border-[#CA9650]">
            <img src="/<%= product.image %>" alt="<%= product.title %>" class="mx-auto w-full h-auto transition-transform duration-300 hover:scale-105">
            <div class="mt-4 font-semibold"><%= product.title %></div>
            <div class="text-gray-700 text-lg">MRP: ₹<%= product.price %></div>
        </div>
    <% }); %>
</div>

  <!-- Sorting Button -->
  <div class="flex justify-end mt-6">
    <button class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400 transition">Default sorting</button>
  </div>
</div>

<%- include('../partials/footer') %>
