<%- include('../partials/header') %>

<div class="flex justify-center items-center min-h-screen my-8">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-lg">
        <h1 class="text-[#CA9650] text-2xl font-bold text-center mb-8">Inquiry Form</h1>
        <form action="/inquiry/form" id="inquiryForm" >
            <!-- Name of Organisation -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Name of the Organisation</label>
                <input type="text" id="orgName" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Organisation Name" required>
                <small id="orgNameError" class="text-red-500 hidden">Please enter the organisation name.</small>
            </div>

            <!-- Contact No. required pattern="[0-9]{10}"-->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Contact No.</label>
                <input type="tel" id="contactNo" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Contact Number" >
                <small id="contactNoError" class="text-red-500 hidden">Please enter a valid 10-digit contact number.</small>
            </div>

            <!-- Address -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Address</label>
                <textarea id="address" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Address" required></textarea>
                <small id="addressError" class="text-red-500 hidden">Please enter your address.</small>
            </div>

            <!-- Brand Currently Dealing In -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Brand Currently Dealing In</label>
                <input type="text" id="brand" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Brand Name" required>
                <small id="brandError" class="text-red-500 hidden">Please enter the brand name.</small>
            </div>

            <!-- Name of Contact Person -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Name of Contact Person</label>
                <input type="text" id="contactPerson" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Contact Person Name" required>
                <small id="contactPersonError" class="text-red-500 hidden">Please enter the contact person's name.</small>
            </div>

            <!-- GST -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">GST</label>
                <input type="text" id="gst" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="GST Number" required>
                <small id="gstError" class="text-red-500 hidden">Please enter a valid GST number.</small>
            </div>

            <!-- Total Monthly Turnover -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">Total Monthly Turnover</label>
                <input type="number" id="monthlyTurnover" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Turnover in â‚¹" required min="0">
                <small id="monthlyTurnoverError" class="text-red-500 hidden">Please enter a valid turnover amount.</small>
            </div>

            <!-- No. of Years in Current Business -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-1">No. of Years in Current Business</label>
                <input type="number" id="yearsInBusiness" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Years in Business" required min="0">
                <small id="yearsInBusinessError" class="text-red-500 hidden">Please enter a valid number of years.</small>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-center">
                <button type="submit" class="px-6 py-2 bg-[#CA9650] text-white font-semibold rounded-md hover:bg-[#EC3539] focus:ring-4 focus:ring-indigo-500">Submit</button>
            </div>
        </form>
    </div>
</div>

<script>
function validateForm() {
    let isValid = true;

    // Organisation Name Validation
    const orgName = document.getElementById('orgName');
    const orgNameError = document.getElementById('orgNameError');
    if (orgName.value.trim() === '') {
        orgNameError.classList.remove('hidden');
        isValid = false;
    } else {
        orgNameError.classList.add('hidden');
    }

    // Contact Number Validation
    const contactNo = document.getElementById('contactNo');
    const contactNoError = document.getElementById('contactNoError');
    const contactNoPattern = /^[0-9]{10}$/;
    if (!contactNoPattern.test(contactNo.value)) {
        contactNoError.classList.remove('hidden');
        isValid = false;
    } else {
        contactNoError.classList.add('hidden');
    }

    // Address Validation
    const address = document.getElementById('address');
    const addressError = document.getElementById('addressError');
    if (address.value.trim() === '') {
        addressError.classList.remove('hidden');
        isValid = false;
    } else {
        addressError.classList.add('hidden');
    }

    // Brand Validation
    const brand = document.getElementById('brand');
    const brandError = document.getElementById('brandError');
    if (brand.value.trim() === '') {
        brandError.classList.remove('hidden');
        isValid = false;
    } else {
        brandError.classList.add('hidden');
    }

    // Contact Person Validation
    const contactPerson = document.getElementById('contactPerson');
    const contactPersonError = document.getElementById('contactPersonError');
    if (contactPerson.value.trim() === '') {
        contactPersonError.classList.remove('hidden');
        isValid = false;
    } else {
        contactPersonError.classList.add('hidden');
    }

    // GST Validation
    const gst = document.getElementById('gst');
    const gstError = document.getElementById('gstError');
    if (gst.value.trim() === '') {
        gstError.classList.remove('hidden');
        isValid = false;
    } else {
        gstError.classList.add('hidden');
    }

    // Monthly Turnover Validation
    const monthlyTurnover = document.getElementById('monthlyTurnover');
    const monthlyTurnoverError = document.getElementById('monthlyTurnoverError');
    if (monthlyTurnover.value < 0) {
        monthlyTurnoverError.classList.remove('hidden');
        isValid = false;
    } else {
        monthlyTurnoverError.classList.add('hidden');
    }

    // Years in Business Validation
    const yearsInBusiness = document.getElementById('yearsInBusiness');
    const yearsInBusinessError = document.getElementById('yearsInBusinessError');
    if (yearsInBusiness.value < 0) {
        yearsInBusinessError.classList.remove('hidden');
        isValid = false;
    } else {
        yearsInBusinessError.classList.add('hidden');
    }

    return isValid;
}
</script>

